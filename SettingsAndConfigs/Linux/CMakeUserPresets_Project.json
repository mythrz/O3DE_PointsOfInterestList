{
    "version": 4,
    "configurePresets": [
        {
            "name": "custom-linux-clang-ninja-compile-commands",
            "displayName": "Linux Clang Ninja (Custom CC)",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/linux_compileCommands",
            "cacheVariables": {
                "LY_3RDPARTY_PATH": "$env{HOME}/O3DE/o3de-packages",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_BUILD_TYPE": "Profile", 
                "CMAKE_UNITY_BUILD": "OFF",
                "PAL_TRAIT_BUILD_TESTS_SUPPORTED": "TRUE"
            }
        },
        {
            "name": "custom-linux-clang-ninja",
            "displayName": "Linux Clang Ninja (Custom)",
            "generator": "Ninja Multi-Config",
            "binaryDir": "${sourceDir}/build/linux",
            "cacheVariables": {
                "LY_3RDPARTY_PATH": "$env{HOME}/O3DE/o3de-packages",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "OFF",
                "CMAKE_UNITY_BUILD": "OFF", // You can turn this ON after the first build, or keep it OFF
                "PAL_TRAIT_BUILD_TESTS_SUPPORTED": "TRUE"
            }
        }
    ],
    "buildPresets":[
        {
            "name": "build-editor-profile",
            "displayName": "Build Editor Profile (Custom)",
            "description": "Build Editor target with profile config",
            "configurePreset": "custom-linux-clang-ninja",
            "targets": ["Editor", "NameOfYourProject.GameLauncher"],
            "configuration": "profile",
            "jobs": 8 // adjust to your cores or remove
        },
        {
            "name": "build-editor-and-AzTestRunner-profile",
            "displayName": "Build Editor Profile and AzTestRunner (Custom)",
            "description": "Build Editor target with profile config",
            "configurePreset": "custom-linux-clang-ninja",
            "targets": ["Editor", "NameOfYourProject.GameLauncher", "AzTestRunner", "AtomCore.Tests"],
            "configuration": "profile",
            "jobs": 8 // adjust to your cores or remove
        }
    ]
}
