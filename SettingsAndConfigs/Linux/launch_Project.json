{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "O3DE Game",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux/bin/profile/NameOfYourProject.GameLauncher",
            "cwd":"${fileDirname}"
        },
        {
            "name": "O3DE Editor",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux/bin/profile/Editor",
            "cwd":"${fileDirname}",
            
            /// This is a fix for Arch-Linux. Use only if the Editor-UI has strange dimensions
            "env": {
                "QT_AUTO_SCREEN_SCALE_FACTOR": "0",
                "QT_ENABLE_HIGHDPI_SCALING": "1",
                "QT_FONT_DPI": "96"
            }
        },
        {
            "name": "NameOfYourGem Tests",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/linux/bin/profile/AzTestRunner",
            "args": [
                "${workspaceFolder}/build/linux/bin/profile/NameOfYourGem.Tests.so",
                "AzRunUnitTests"
            ],
            "console": "integratedTerminal",
        }
    ]
}
